<link rel="stylesheet" href="/cart/static/css/main.css">

<h1>Cart</h1>
<h1>Total: $ <%= total %>
</h1>
<div class="cart_list_ctn">
    <% products.forEach(p=> { %>
        <div class="product_card" data-id="{<%= p.id%>">
            <img src="<%= p.imgpath%>">
            <div>
                <div class="header">
                    <h3>
                        <%= p.name %>
                    </h3>
                </div>

                <div class="price_table">
                    <div class="price">
                        <h3>
                            <span>Price:</span>
                            <span>$ <%= p.normalprice%></span>
                        </h3>
                    </div>
                    <div class="price">
                        <h3>
                            <span>Qty:</span>
                            <span>
                                <%= p.qty%>
                            </span>
                        </h3>
                    </div>

                    <div class="total">
                        <h3>
                            <span>Total:</span>
                            <span>$ <%= p.normalprice * p.qty%></span>
                        </h3>
                    </div>
                </div>
            </div>
        </div>
        <% }) %>
</div>